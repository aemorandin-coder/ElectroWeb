model AnalyticsEvent {
  id          String   @id @default(cuid())
  eventType   String   // page_view, click, registration, login, purchase, product_request, security_alert, etc.
  eventCategory String // interaction, conversion, security, system
  eventAction String?  // specific action: button_click, form_submit, failed_login, etc.
  eventLabel  String?  // additional context
  eventValue  Float?   // numeric value if applicable
  
  // Page/Source info
  page        String?  // URL or page name where event occurred
  referrer    String?  // Where the user came from
  
  // User info (optional, for logged-in users)
  userId      String?
  userEmail   String?
  
  // Session/Device info
  sessionId   String?
  deviceType  String?  // desktop, mobile, tablet
  browser     String?
  os          String?
  
  // Location info
  ipAddress   String?
  country     String?
  city        String?
  
  // Security-related
  isSuspicious Boolean @default(false)
  threatLevel  String?  // low, medium, high, critical
  threatDetails String?
  
  // Metadata
  metadata    Json?    // Additional flexible data
  
  createdAt   DateTime @default(now())
  
  @@index([eventType])
  @@index([eventCategory])
  @@index([createdAt])
  @@index([userId])
  @@index([isSuspicious])
  @@map("analytics_events")
}

