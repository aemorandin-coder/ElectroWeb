  userAgent   String?
  userId      String?
  userEmail   String?
  
  endpoint    String?  // API endpoint or page
  method      String?  // GET, POST, etc.
  payload     String?  // Sanitized request payload
  
  description String
  blocked     Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  
  @@index([eventType])
  @@index([severity])
  @@index([ipAddress])
  @@index([createdAt])
  @@map("security_logs")
}

// Email Configuration for SMTP providers (GoDaddy, Gmail, etc)
model EmailSettings {
  id                    String   @id @default("default")
  
  // Provider Selection
  provider              String   @default("godaddy") // godaddy, gmail, outlook, custom
  
  // SMTP Configuration
  smtpHost              String?  // e.g., smtpout.secureserver.net for GoDaddy
  smtpPort              Int      @default(465)
  smtpSecure            Boolean  @default(true) // true for SSL/TLS
  smtpUser              String?  // Email address
  smtpPassword          String?  // Encrypted password
  
