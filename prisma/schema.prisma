generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  password      String?
  image         String?
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  orders        Order[]
  reviews       Review[]
  addresses     Address[]
  reservations  StockReservation[]
  notifications Notification[]
  notificationPreferences NotificationPreference?
  profile       Profile?
  balance       UserBalance?
  wishlist      Wishlist?
  savedPaymentMethods SavedPaymentMethod[]
  passwordResetTokens PasswordResetToken[]
  emailVerificationTokens EmailVerificationToken[]
  discountRequests    DiscountRequest[]

  @@map("users")
}

model Profile {
  id                          String   @id @default(cuid())
  userId                      String   @unique
  user                        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userEmail                   String?  @unique
  avatar                      String?
  idNumber                    String?  // Cédula o Pasaporte
  phone                       String?
  whatsapp                    String?
  bio                         String?
  birthdate                   String?
  gender                      String?
  city                        String?
  state                       String?
  country                     String?  @default("Venezuela")
  customerType                String   @default("PERSON") // PERSON or COMPANY
  companyName                 String?
  taxId                       String?
  isBusinessAccount           Boolean  @default(false)
  businessVerified            Boolean  @default(false)
  businessVerificationStatus  String   @default("NONE") // NONE, PENDING, APPROVED, REJECTED
  businessRIF                 String?
  businessConstitutiveAct     String?
  businessRIFDocument         String?
  businessVerificationNotes   String?
  businessVerifiedAt          DateTime?
  savedAddresses              String?  // JSON array of saved addresses
  
  // Session Info
  lastLoginAt                 DateTime?
  lastLoginDevice             String?
  lastLoginIp                 String?
  
  // Privacy Preferences
  allowSurveys                Boolean  @default(true)
  shareAnonymousData          Boolean  @default(false)
  
  // Account Status
  accountStatus               String   @default("ACTIVE") // ACTIVE, DEACTIVATED, PENDING_DELETION
  deactivatedAt               DateTime?
  deletionRequestedAt         DateTime?
  deletionReason              String?
  
  createdAt                   DateTime @default(now())
  updatedAt                   DateTime @updatedAt

  @@map("profiles")
}

model UserBalance {
  id          String        @id @default(cuid())
  userId      String        @unique
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  balance     Decimal       @default(0)
  currency    String        @default("USD")
  totalSpent  Decimal       @default(0)
  totalRecharges Decimal    @default(0)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  transactions Transaction[]

  @@map("user_balances")
}

model Transaction {
  id              String      @id @default(cuid())
  balanceId       String
  balance         UserBalance @relation(fields: [balanceId], references: [id], onDelete: Cascade)
  type            String      // DEPOSIT, PURCHASE, REFUND
  status          String      // PENDING, COMPLETED, FAILED, CANCELLED
  amount          Decimal
  currency        String
  description     String?
  reference       String?
  paymentMethod   String?
  rejectionReason String?     // Reason for rejection if status is CANCELLED
  metadata        String?     // JSON string
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  @@index([balanceId])
  @@map("transactions")
}

model BalanceTermsAcceptance {
  id              String   @id @default(cuid())
  userId          String   @unique
  userName        String
  userEmail       String
  userIdNumber    String?  // Cédula
  userPhone       String?
  userAddress     String?
  ipAddress       String?
  userAgent       String?
  termsVersion    String   @default("1.0")
  signatureData   String?  // Base64 encoded signature image
  acceptedAt      DateTime @default(now())
  documentPath    String?  // Path to generated PDF document

  @@map("balance_terms_acceptances")
}

model Address {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name         String
  street       String
  city         String
  state        String
  zipCode      String
  country      String
  phone        String
  isDefault    Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("addresses")
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
  SUPPORT
}

model Product {
  id          String   @id @default(cuid())
  name        String
  sku         String   @unique
  slug        String   @unique
  description String
  priceUSD    Decimal
  priceVES    Decimal?
  stock       Int      @default(0)
  minStock    Int      @default(0)
  images      String   // JSON string of image URLs
  mainImage   String?  // Main product image URL
  features    String?  // JSON string of features
  specs       String?  // JSON string of specifications

  // Product Type: PHYSICAL or DIGITAL
  productType ProductType @default(PHYSICAL)
  
  // Digital Product Fields
  digitalPlatform       String?  // STEAM, PLAYSTATION, XBOX, NINTENDO, ROBLOX, FREEFIRE, etc.
  digitalRegion         String?  // GLOBAL, USA, LATAM, EU, etc.
  deliveryMethod        String?  // INSTANT (code delivered immediately) or MANUAL (admin sends code)
  redemptionInstructions String? // Custom instructions for redeeming the digital code
  
  // Shipping Fields (for PHYSICAL products only)
  weightKg        Decimal?  @default(0)     // Weight in kilograms
  dimensions      String?                    // JSON: {length, width, height} in cm
  isConsolidable  Boolean   @default(true)  // Can be shipped with other products in same box
  shippingCost    Decimal?  @default(0)     // Fixed shipping cost (for non-consolidable items)
  
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])

  brandId     String?
  brand       Brand?   @relation(fields: [brandId], references: [id])

  status      ProductStatus @default(DRAFT)
  isFeatured  Boolean       @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime  @updatedAt

  orderItems    OrderItem[]
  reviews       Review[]
  reservations  StockReservation[]
  wishlistItems WishlistItem[]
  digitalCodes  DigitalCode[]

  @@map("products")
}

enum ProductType {
  PHYSICAL
  DIGITAL
}

enum ProductStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

// Digital Codes for products like Steam, PlayStation, Xbox cards
model DigitalCode {
  id          String   @id @default(cuid())
  productId   String
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  code        String   // The actual code (encrypted in production)
  status      DigitalCodeStatus @default(AVAILABLE)
  
  // When sold
  orderId     String?
  orderItemId String?
  soldAt      DateTime?
  
  // When redeemed/delivered
  deliveredAt DateTime?
  redeemedAt  DateTime?
  
  // Tracking
  addedBy     String?  // Admin who added this code
  notes       String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([productId])
  @@index([status])
  @@map("digital_codes")
}

enum DigitalCodeStatus {
  AVAILABLE    // Ready to be sold
  RESERVED     // Reserved during checkout
  SOLD         // Sold and assigned to an order
  DELIVERED    // Delivered to customer
  EXPIRED      // Code expired
  INVALID      // Code marked as invalid
}

// Gift Card Designs (templates)
model GiftCardDesign {
  id              String   @id @default(cuid())
  name            String   // "Gaming Theme", "Birthday", "Christmas", etc.
  slug            String   @unique
  description     String?
  
  // Visual Design
  backgroundImage String?  // Background image URL
  backgroundColor String?  // Fallback background color
  textColor       String?  // Primary text color
  accentColor     String?  // Accent/highlight color
  pattern         String?  // Pattern type: dots, lines, gradient, etc.
  
  // Design Category
  category        String   @default("GENERAL") // GENERAL, GAMING, BIRTHDAY, CHRISTMAS, VALENTINES, etc.
  
  isActive        Boolean  @default(true)
  isDefault       Boolean  @default(false)
  sortOrder       Int      @default(0)
  
  giftCards       GiftCard[]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("gift_card_designs")
}

// Electro Shop Gift Cards
model GiftCard {
  id              String   @id @default(cuid())
  
  // Card Details
  code            String   @unique  // Format: ESMC-XXXX-XXXX-XXXX
  pin             String?           // Optional PIN for extra security
  amountUSD       Decimal           // Original amount
  balanceUSD      Decimal           // Remaining balance
  
  // Status
  status          GiftCardStatus @default(INACTIVE)
  
  // Design
  designId        String?
  design          GiftCardDesign? @relation(fields: [designId], references: [id])
  
  // Purchase Info
  purchasedBy     String?         // User ID who purchased
  purchasedAt     DateTime?
  orderId         String?         // Order where it was purchased
  
  // Recipient Info (if sent as gift)
  recipientEmail  String?
  recipientName   String?
  senderName      String?
  personalMessage String?
  
  // Delivery
  deliveredAt     DateTime?
  emailSentAt     DateTime?
  
  // Activation & Expiration
  activatedAt     DateTime?
  expiresAt       DateTime?
  
  // Usage Tracking
  lastUsedAt      DateTime?
  usageCount      Int      @default(0)
  
  // Redemption (when fully used or redeemed)
  redeemedBy      String?         // User ID who redeemed
  redeemedAt      DateTime?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Transaction history
  transactions    GiftCardTransaction[]

  @@index([code])
  @@index([status])
  @@index([purchasedBy])
  @@map("gift_cards")
}

enum GiftCardStatus {
  INACTIVE      // Created but not activated
  ACTIVE        // Ready to use
  PARTIALLY_USED // Some balance remaining
  DEPLETED      // Fully used (balance = 0)
  EXPIRED       // Past expiration date
  SUSPENDED     // Temporarily disabled
  CANCELLED     // Cancelled/refunded
}

// Gift Card Transaction History
model GiftCardTransaction {
  id            String   @id @default(cuid())
  giftCardId    String
  giftCard      GiftCard @relation(fields: [giftCardId], references: [id], onDelete: Cascade)
  
  type          String   // PURCHASE, ACTIVATION, USAGE, REFUND, ADJUSTMENT
  amountUSD     Decimal
  balanceBefore Decimal
  balanceAfter  Decimal
  
  // If used for an order
  orderId       String?
  orderNumber   String?
  
  // Who made the transaction
  userId        String?
  userEmail     String?
  
  description   String?
  
  createdAt     DateTime @default(now())

  @@index([giftCardId])
  @@map("gift_card_transactions")
}


model Category {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  description String?
  image       String?
  parentId    String?
  parent      Category? @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryHierarchy")
  products    Product[]
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("categories")
}

model Brand {
  id          String    @id @default(cuid())
  name        String    @unique
  slug        String    @unique
  logo        String?
  products    Product[]
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("brands")
}

model Order {
  id            String      @id @default(cuid())
  orderNumber   String      @unique // Format: ORD-YYYY-XXXX
  userId        String?
  user          User?       @relation(fields: [userId], references: [id])

  // Guest Checkout Info (if userId is null)
  guestName     String?
  guestEmail    String?
  guestPhone    String?

  status        OrderStatus @default(PENDING)
  paymentStatus PaymentStatus @default(PENDING)
  paymentMethod String?

  // Amounts
  subtotalUSD   Decimal
  taxUSD        Decimal
  shippingUSD   Decimal
  totalUSD      Decimal
  discountUSD   Decimal     @default(0)

  exchangeRate  Decimal
  totalVES      Decimal
  exchangeRateVES Decimal?
  exchangeRateEUR Decimal?

  // Delivery Method
  deliveryMethod  String?   // HOME_DELIVERY, STORE_PICKUP

  // Shipping Info
  shippingAddress String
  shippingCarrier String?   // ZOOM, MRW, TEALCA, DOMESA, OTHER
  trackingNumber  String?
  trackingUrl     String?   // URL de seguimiento del carrier
  shippingNotes   String?   // Notas adicionales de envío (oficina, agencia, etc.)
  estimatedDelivery DateTime? // Fecha estimada de entrega

  notes         String?
  adminNotes    String?     // Notas internas del admin

  // Status Timestamps
  confirmedAt   DateTime?   // Cuando el admin confirma el pedido
  processingAt  DateTime?   // Cuando comienza a prepararse
  paidAt        DateTime?
  shippedAt     DateTime?
  deliveredAt   DateTime?
  cancelledAt   DateTime?

  items         OrderItem[]

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@map("orders")
}

enum OrderStatus {
  PENDING           // Pedido recibido, esperando confirmación
  CONFIRMED         // Confirmado por el admin
  PAID              // Pagado (puede ser antes o después de confirmar)
  PROCESSING        // En preparación
  READY_FOR_PICKUP  // Listo para recoger (si es STORE_PICKUP)
  SHIPPED           // Enviado (con info de guía)
  DELIVERED         // Entregado
  CANCELLED         // Cancelado
  REFUNDED          // Reembolsado
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

model OrderItem {
  id          String  @id @default(cuid())
  orderId     String
  order       Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId   String
  product     Product @relation(fields: [productId], references: [id])

  quantity    Int
  priceUSD    Decimal
  totalUSD    Decimal
  productName String?
  productImage String?
  productSku  String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("order_items")
}

model Review {
  id          String   @id @default(cuid())
  rating      Int
  comment     String?
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  productId   String
  product     Product  @relation(fields: [productId], references: [id])
  isApproved  Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("reviews")
}

